// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post{
  postId String @id @unique
  provider String?
  text String
  image String[] @default([])
  date DateTime @default(now())
  @@index([date])
  @@index([provider])
}
